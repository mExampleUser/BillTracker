<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".ViewBillers">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:elevation="5dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-7376638390241452/6281228857"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/offset"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/drawerToggle1"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/drawer_toggle"
            android:gravity="start"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_baseline_menu_24"
            app:tint="@color/blackAndWhite" />

        <TextView
            android:id="@+id/textView481"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="65dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/help1"
                android:layout_width="65dp"
                android:layout_height="0dp"
                android:contentDescription="@string/help_icon"
                android:padding="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mail_5888"
                app:tint="@color/blackAndWhite" />

            <TextView
                android:id="@+id/ticketCounter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:paddingStart="7dp"
                android:paddingTop="2dp"
                android:paddingEnd="7dp"
                android:paddingBottom="2dp"
                android:text="@string/two"
                android:textColor="@color/white"
                android:visibility="gone"
                app:backgroundTint="@color/button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/settingsButton1"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/settings_icon"
            android:gravity="end"
            android:padding="15dp"
            android:visibility="visible"
            app:srcCompat="@drawable/settings_3110"
            app:tint="@color/blackAndWhite" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar1" />

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/viewBillersHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/registeredBillers"
                    android:textAlignment="center"
                    android:textColor="@color/blackAndWhite"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:translationX="-2000dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:text="@string/clickBillerTile"
                    android:textSize="16sp"
                    android:translationX="2000dp"
                    app:layout_constraintBottom_toTopOf="@+id/divider3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewBillersHeader" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView43" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/llViewBillers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:translationY="1000dp">

                <LinearLayout
                    android:id="@+id/noBillers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables,UselessParent">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="30dp"
                        android:contentDescription="@string/no_results"
                        app:srcCompat="@drawable/noun_not_found_2503986"
                        app:tint="@color/grey" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="@string/noBillers"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navDrawer1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:nestedScrollingEnabled="true"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/linearLayout21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/navHeaderBox1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/blue"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables"
                        tools:layout_conversion_absoluteHeight="56dp"
                        tools:layout_conversion_absoluteWidth="246dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="38dp">

                        <ImageView
                            android:id="@+id/iVLogo1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            android:contentDescription="@string/nav_header_desc"
                            app:srcCompat="@drawable/newbillsicon"
                            app:tint="@color/icon" />

                        <TextView
                            android:id="@+id/logoutButton1"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/border_styles"
                            android:gravity="center"
                            android:onClick="logout"
                            android:text="@string/logout"
                            android:textColor="@color/blackAndWhite"
                            android:textSize="12sp"
                            app:backgroundTint="@color/grey" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/nav_header_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:layout_conversion_absoluteHeight="27dp"
                        tools:layout_conversion_absoluteWidth="246dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="113dp" />

                    <TextView
                        android:id="@+id/tvUserName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_header_subtitle"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_conversion_absoluteWidth="182dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="141dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout51"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/tray"
                    android:elevation="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/navHome1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:text="@string/navHome"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_baseline_home_24"
                        app:drawableTint="@color/button" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/navViewBillers1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/navViewBillers"
                            android:textSize="14sp"
                            app:drawableStartCompat="@drawable/ic_baseline_list_alt_24"
                            app:drawableTint="@color/blackAndWhite" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/navPaymentHistory1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:text="@string/navPaymentHistory"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_baseline_calendar_month_24"
                        app:drawableTint="@color/blackAndWhite" />

                    <TextView
                        android:id="@+id/myStats1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:text="@string/navInsights"
                        android:textColor="@color/blackAndWhite"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_baseline_insights_24"
                        app:drawableTint="@color/blackAndWhite" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hideNavDrawer1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:alpha="0.5"
                android:background="@color/black"
                android:orientation="vertical"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pb14"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".6"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBar34"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>