<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:translationY="1000dp">

    <LinearLayout
        android:id="@+id/trophy"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/button"
        android:elevation="10dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/trophyImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            app:srcCompat="@drawable/trophy"
            android:contentDescription="@string/trophy_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".65"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView78"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:text="@string/achievement_unlocked"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/trophyMessage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:text="@string/you_ve_unlocked_the_first_trophy"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/closeTrophy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top|center"
                android:layout_weight=".5"
                android:padding="15dp"
                app:srcCompat="@drawable/ic_baseline_close_24"
                app:tint="@color/white"
                tools:ignore="NestedWeights"
                android:contentDescription="@string/close_button" />

            <ImageView
                android:id="@+id/shareTrophy1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom|center"
                android:layout_weight=".5"
                android:padding="15dp"
                app:srcCompat="@drawable/baseline_share_24"
                app:tint="@color/white"
                android:contentDescription="@string/share_button" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>