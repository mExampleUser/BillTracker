<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addBiller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".AddBiller">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-7376638390241452/9674459208"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/scrollView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/backAddBillerLayout"
                android:layout_width="103dp"
                android:layout_height="59dp"
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/backAddBiller"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/blackAndWhite"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="22dp"
                    android:text="@string/back" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addBillerPhotoChooser"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/addBillerIcon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:shapeAppearanceOverlay="@style/Circular"
                    tools:srcCompat="@drawable/invoice" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circle"
                    android:contentDescription="@string/select_image_button"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/addBillerIcon"
                    app:layout_constraintEnd_toEndOf="@id/addBillerIcon"
                    app:srcCompat="@drawable/ic_baseline_image_search_24" />

                <TextView
                    android:id="@+id/useDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/use_default_icon"
                    android:textColor="@color/fingerprint"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addBillerIcon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/billerNameHeader1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:text="@string/j"
                android:textColor="@color/blackAndWhite"
                android:textSize="26sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp"
                tools:ignore="UseSwitchCompatOrMaterialXml">

                <LinearLayout
                    android:id="@+id/billerNameLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView81"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/k"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/billerNameError"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/l"
                        android:textColor="@color/lightblue"
                        android:visibility="gone" />

                </LinearLayout>

                <AutoCompleteTextView
                    android:id="@+id/etBillerName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:background="@drawable/edit_text"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="30"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="16sp"
                    tools:ignore="LabelFor" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/m"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView91"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/n"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/websiteError"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/o"
                        android:textColor="@color/lightblue"
                        android:visibility="gone" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:background="@drawable/edit_text"
                    android:focusable="true"
                    android:inputType="textEmailAddress"
                    android:maxLength="100"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor" />

                <LinearLayout
                    android:id="@+id/dueDateLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView131"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dueDate"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dueDateError"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/dueDateCantBeBlank"
                        android:textColor="@color/lightblue"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/etDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:background="@drawable/edit_text"
                    android:gravity="center_vertical"
                    android:inputType="none"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/quantum_grey500"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_baseline_calendar_month_24"
                    app:drawableTint="@color/grey" />

                <LinearLayout
                    android:id="@+id/amountDueLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView71"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/amountDue"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/amountDueError"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/amountDueCantBeBlank"
                        android:textColor="@color/lightblue"
                        android:visibility="gone" />

                </LinearLayout>

                <EditText
                    android:id="@+id/etAmountDue"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:background="@drawable/edit_text"
                    android:digits="0123456789.,"
                    android:hint="@string/amountDue1"
                    android:inputType="numberDecimal"
                    android:maxLength="12"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:importantForAutofill="no" />

                <TextView
                    android:id="@+id/textView151"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight=".5"
                    android:text="@string/frequency"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/frequency"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/recurringSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:minHeight="48dp"
                    android:text="@string/recurring"
                    android:textSize="16sp"
                    app:theme="@style/DarkSwitch" />

                <Button
                    android:id="@+id/btnSubmitBiller"
                    style="@style/TextButton"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp"
                    android:text="@string/submitBiller"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/pb2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".6"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBar20"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>