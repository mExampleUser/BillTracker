<?xml version="1.0" encoding="utf-8"?>

<me.thanel.swipeactionview.SwipeActionView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paidSwipeView"
    app:circularflow_defaultRadius="5dp"
    android:translationX="1000dp"
    android:clipToOutline="true"
    android:layout_height="wrap_content"
    tools:targetApi="s">

    <TextView
        android:id="@+id/markAsPaidBox"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/payBill"
        android:gravity="start|center_vertical"
        android:radius="5dp"
        app:circularflow_defaultRadius="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/mark_as_paid"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/paymentHistoryBox"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        app:circularflow_defaultRadius="5dp"
        android:background="@color/button"
        android:gravity="end|center_vertical"
        android:text="@string/payment_history"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/billBox5"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@drawable/border_styles_white">

        <ImageView
            android:id="@+id/checkMark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".075"
            android:background="@color/blueGrey"
            android:padding="5dp"
            app:srcCompat="@drawable/checkmarkgreen"
            app:tint="@color/white"
            android:contentDescription="@string/check_mark" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/billIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/Circular" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight=".45"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBillerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/consolidated_communications"
                android:textSize="16sp"
                app:fontFamily="sans-serif-condensed-medium" />

            <TextView
                android:id="@+id/tvDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/paid_on_12_7_2022"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/amountDue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="@string/_152_77"
            android:textSize="16sp" />

    </LinearLayout>
</me.thanel.swipeactionview.SwipeActionView>